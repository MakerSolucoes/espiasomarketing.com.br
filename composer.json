{
    "name": "alone/espiasomarketing.com.br",
    "description": "Composer for espiaso project",
    "require": {
        "roots/wordpress": "^6.1",
        "wpackagist-theme/intentionally-blank": "3.0.3",
        "wpackagist-plugin/wp-rest-api-controller": "2.1.2"
    },
    "repositories": [{
        "type": "composer",
        "url": "https://wpackagist.org"
    }],
    "scripts": {
        "move-wordpress": [
            "cp -r wordpress/* ./",
            "rm -rf wordpress"
        ],
        "post-install-cmd": [
            "@move-wordpress"
        ],
        "post-update-cmd": [
            "@move-wordpress"
        ]
    },
    "config": {
        "allow-plugins": {
            "roots/wordpress-core-installer": true,
            "composer/installers": false
        }
    }
}
